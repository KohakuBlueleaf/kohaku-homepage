---
import { PaginationHeader, Section } from "astro-boilerplate-components";

import Gallery from "@/partials/Gallery";
import Base from "@/templates/Base.astro";
import { AppConfig } from "@/utils/AppConfig";

// eslint-disable-next-line import/no-named-as-default, import/no-named-as-default-member
import imgUrls from "./img-list";

const titleSuffix = ` - ${AppConfig.site_name}`;
const titleBase = `Gallery`;
const title = titleBase + titleSuffix;
const description = "KohakuBlueLeaf Gallery";
---

<Base head={{ title, description }}>
  <Section>
    <PaginationHeader title="Gallery" description="Cuwute" />
  </Section>

  <Section>
    <Gallery imgUrls={imgUrls} client:load />
  </Section>
</Base>
